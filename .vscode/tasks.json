{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "./scripts/build.sh",
            "args": ["debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "./scripts/build.sh"
            },
            "osx": {
                "command": "./scripts/build.sh"
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "./scripts/build.sh",
            "args": ["release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "build-debug-windows",
            "type": "shell",
            "command": ".\\scripts\\build.ps1",
            "args": ["Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": ".\\scripts\\build.ps1"
            }
        },
        {
            "label": "build-release-windows",
            "type": "shell",
            "command": ".\\scripts\\build.ps1",
            "args": ["Release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": ".\\scripts\\build.ps1"
            }
        },
        {
            "label": "run-tests",
            "type": "shell",
            "command": "./scripts/test.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "./scripts/test.sh"
            },
            "osx": {
                "command": "./scripts/test.sh"
            },
            "windows": {
                "command": ".\\scripts\\test.ps1"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "Remove-Item",
                "args": ["-Recurse", "-Force", "build"],
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                }
            }
        },
        {
            "label": "setup-environment",
            "type": "shell",
            "command": "./scripts/setup.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": ".\\scripts\\setup.ps1"
            }
        },
        {
            "label": "docker-build",
            "type": "shell",
            "command": "./scripts/docker_build.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "format-code",
            "type": "shell",
            "command": "find",
            "args": [
                "src", "include", "tests",
                "-name", "*.cpp", "-o", "-name", "*.h", "-o", "-name", "*.hpp",
                "|", "xargs", "clang-format", "-i"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
